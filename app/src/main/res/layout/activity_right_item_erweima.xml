<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_activity_title_back"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        layout="@layout/activity_title_back"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_yzzs"
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:background="@drawable/selector_right_menu_item_bg"
            android:clickable="false"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="visible"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_yzzs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="养殖助手:"
                android:textSize="26sp"
                android:layout_weight="0.36" />

            <ImageView
                android:layout_marginTop="30dp"
                android:id="@+id/iv_yzzs_ewm"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:padding="20dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/actionbar_icon" />

            <TextView
                android:id="@+id/tv_haifmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="口袋牧场:"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/iv_haifmp_ewm"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:padding="20dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/account_oauth_login_sliding_drawer_header" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>