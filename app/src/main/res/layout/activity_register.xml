<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_activity_title_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_title_back"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgray" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/register_zhanghuRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_right_menu_item_bg"
                        android:clickable="false"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+id/register_zhuanghu"
                            style="@style/TextColorGray"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/register_zhuanghu"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/zhanghuEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toLeftOf="@+id/zhanghuExisitTextView"
                            android:layout_toRightOf="@+id/register_zhuanghu"
                            android:background="@drawable/editview_bg"
                            android:hint="@string/register_zhuanghu_hint"
                            android:singleLine="true"
                            android:textColor="@color/lightblue2"
                            android:textSize="15sp" >

                            <requestFocus />
                        </EditText>

                        <TextView
                            android:id="@+id/zhanghuExisitTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="用户名已存在"
                            android:textColor="#D30A0A"
                            android:textSize="12sp"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgray" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:background="#eee"
                        android:gravity="right"
                        android:text="@string/register_zhuanghu_not_modify"
                        android:textColor="@color/lightblue2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgray" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/sztx_xiangceRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_right_menu_item_bg"
                        android:clickable="false"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+id/tv_mcsz"
                            style="@style/TextColorGray"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/right_title_nicheng"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/nichengEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toLeftOf="@+id/nichengExisitTextView"
                            android:layout_toRightOf="@+id/tv_mcsz"
                            android:background="@drawable/editview_bg"
                            android:hint="@string/register_nicheng_hint"
                            android:singleLine="true"
                            android:textColor="@color/lightblue2"
                            android:textSize="15sp" >

                            <requestFocus />
                        </EditText>

                        <TextView
                            android:id="@+id/nichengExisitTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="昵称已被注册"
                            android:textColor="#D30A0A"
                            android:textSize="12sp"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgray" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/register_shoujihaoRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_right_menu_item_bg"
                        android:clickable="false"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+id/findP_shoujhaoText"
                            style="@style/TextColorGray"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/right_title_shoujihao"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/shoujihaoEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toLeftOf="@+id/shoujihaoExisitTextView"
                            android:layout_toRightOf="@+id/findP_shoujhaoText"
                            android:background="@drawable/editview_bg"
                            android:hint="@string/register_shoujihao_hint"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textColor="@color/lightblue2"
                            android:textSize="15sp" >

                            <requestFocus />
                        </EditText>

                        <TextView
                            android:id="@+id/shoujihaoExisitTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="手机已被注册"
                            android:textColor="#D30A0A"
                            android:textSize="12sp"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgray" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/register_yanzhengmaRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_right_menu_item_bg"
                        android:clickable="false"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+id/yanzhengmaText"
                            style="@style/TextColorGray"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/register_yanzhengma"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/yanzhengmaEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2dp"
                            android:layout_toLeftOf="@+id/yanzhengmaButton"
                            android:layout_toRightOf="@+id/yanzhengmaText"
                            android:background="@drawable/editview_bg"
                            android:hint="@string/register_yanzhengma_hint"
                            android:singleLine="true"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/lightblue2"
                            android:textSize="15sp" >
                            <requestFocus />
                        </EditText>

                        <Button
                            android:id="@+id/yanzhengmaButton"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="发送验证码"
                            android:textColor="@color/lightblue2"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgray" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/register_mimaRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_right_menu_item_bg"
                        android:clickable="false"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+id/findP_mimaText"
                            style="@style/TextColorGray"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/register_password"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/mimaEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/findP_mimaText"
                            android:background="@drawable/editview_bg"
                            android:hint="@string/register_password_hint"
                            android:singleLine="true"
                            android:textColor="@color/lightblue2"
                            android:textSize="15sp" >

                            <requestFocus />
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgray" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/register_mimaConfirmRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_right_menu_item_bg"
                        android:clickable="false"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:visibility="visible" >

                        <TextView
                            android:id="@+id/findP_mimaConfimText"
                            style="@style/TextColorGray"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="@string/register_password_confirm"
                            android:textSize="15sp"
                            android:textStyle="" />

                        <EditText
                            android:id="@+id/mimaConfimEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/findP_mimaConfimText"
                            android:background="@drawable/editview_bg"
                            android:hint="@string/register_password_hint_again"
                            android:singleLine="true"
                            android:textColor="@color/lightblue2"
                            android:textSize="15sp" >

                            <requestFocus />
                        </EditText>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/findPButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/exitbtn"
                        android:gravity="center"
                        android:shadowColor="#000000"
                        android:shadowDx="9"
                        android:shadowDy="9"
                        android:text="@string/register_zhuce_button"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>